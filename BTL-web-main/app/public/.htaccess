# Bật Rewrite Engine
RewriteEngine On

# Đặt thư mục gốc
RewriteBase /btminhgit-mvc/BTL-web-main/app/public/

# Chuyển hướng tất cả yêu cầu không phải file hoặc thư mục đến index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d


RewriteRule ^([^/]+)/?$ index.php?controller=$1 [QSA,L]
RewriteRule ^([a-zA-Z]*)/?([a-zA-Z]*)?/?([a-zA-Z0-9]*)?/?$ index.php?controller=$1&action=$2&id=$3 [NC,L]
RewriteRule ^([^/]+)/([^/]+)/?$ index.php?controller=$1&id=$2 [QSA,L]





